package com.company;

public class TemperatureConverter {
    /*
    5
    Design a class named TemperatureConverter
        methods
        - convertFarenheitToCelsius
        - convertFarenheitToKelvin

        - convertCelsiusToFarenheit
        - convertCelsiusToKelvin

        - convertKelvinToFarenheit
        - convertKelvinToCelsius
     */
    //region Methods
    public double convertFarenheitToCelsius(int f) {
        double c = (f - 32) * 5 / 9;
        return c;
    }

    public double convertFarenheitToKelvin(int f) {
        double k = convertFarenheitToCelsius(f) + 273.15;
        return k;
    }

    public double convertCelsiusToFarenheit(int c) {
        double f = (c * 9) / 5 + 32;
        return f;
    }

    public double convertCelsiusToKelvin(int c) {
        double k = c + 273.15;
        return k;
    }

    public double convertKelvinToFarenheit(int k) {
        double f = (k - 273.15) * 9 / 5 + 32;
        return f;
    }

    public double KelvinToCelsius(int k) {
        double c = k - 273.15;
        return c;
    }
    //endregion
}
